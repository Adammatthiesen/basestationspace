---
import "@fontsource/inter/400.css";
import "@fontsource/inter/700.css";

import App from "../../app.json";
import Footer from "../components/Footer.astro";
import { THEME } from "../lib/theme";

export interface Props {
  title: string;
}

const { title } = Astro.props.frontmatter || Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link
      rel="shortcut icon"
      href='data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" 
      viewBox="0 0 100 100"><text y=".9em" font-size="90">🧑‍🚀</text></svg>'
    />

    <meta name="generator" content={Astro.generator} />

    <title>{App.name} · {title}</title>
    <meta name="description" content="An Astro template for your iOS apps." />
  </head>

  <body class:list={[THEME.base.join(" "), "font-sans"]}>
    <slot />
    <Footer />
  </body>
</html>
